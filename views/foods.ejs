<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link href="/stylesheet.css" rel="stylesheet" type="text/css">
        <style media="screen">
            .picture {
                display: flex;
                flex-direction: column;
            }
            a>ion-icon {
                margin-left: 90%;
            }

            body {
                display: flex;
                flex-direction: row;
                justify-content: center;
            }
            .left {
                margin: 0 0 0 0;
            }
            .food-posts {
                margin: 3em 0 3em 0;
            }
            .nav,flex-column {
                margin: 8em 0 0 3em;
            }



        </style>
    </head>

    <body>

        <div class="left">
            <h1>Foods</h1>
            <div class="main-content">



                    <% for (let post of allPosts) { %>

                        <div class="food-posts">
                            <h1><%=post.title%></h1>


                                <div class="foods-pictures">
                                    <a href="/ml/foods/<%=post._id%>">
                                        <img src="<%=post.img%>" alt="">
                                    </a>
                                    <a href="/ml/foods/<%=post.id%>/edit"><ion-icon name="ellipsis-horizontal-outline"></ion-icon></a>
                                </div>




                            <p><%=post.description%></p>
                            <h3><%=post.tag%></h3>
                            <form action="/ml/foods/<%=post._id%>?_method=DELETE" method="POST">
                                <input type="submit" name="" class="btn btn-outline-danger" value="Delete">
                            </form>
                        </div>
                    <% } %>


            </div>
        </div>


        <div class="nav flex-column">
            <a class="btn btn-outline-light" href="/ml/">Home</a>

            <a class="btn btn-outline-light" href="/ml/foods/newPost">New Post</a>
        </div>

        <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>

    </body>
</html>
